{
  "name": "express-authorshaven",
  "version": "1.0.0",
  "description": "A Social platform for the creative at heart",
  "main": "index.js",
  "scripts": {
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "linter": "./node_modules/eslint/bin/eslint.js './**/*.js'",
    "start": "npm run build && npm run serve",
    "serve": "node ./dist/index.js",
    "postinstall": "npm run  db:migrate",
    "test": "nyc mocha ./tests --require babel-polyfill --require babel-register --exit --recursive",
    "build": "rm -rf dist/ && babel ./server --out-dir dist/ --ignore ./node_modules",
    "start:dev": "babel-watch server/index.js",
    "db:migrate": "node_modules/.bin/sequelize db:migrate",
    "db:reset": "node_modules/.bin/sequelize db:migrate:undo:all"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run linter"
    }
  },
  "author": "Andela Simulations Programme",
  "license": "MIT",
  "dependencies": {
    "babel-cli": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "cors": "^2.8.4",
    "dotenv": "^6.0.0",
    "errorhandler": "^1.5.0",
    "express": "^4.16.3",
    "express-jwt": "^5.3.1",
    "express-session": "^1.15.6",
    "jsonwebtoken": "^8.3.0",
    "method-override": "^2.3.10",
    "methods": "^1.1.2",
    "morgan": "^1.9.1",
    "passport": "^0.4.0",
    "passport-local": "^1.0.0",
    "pg": "^7.6.1",
    "pg-hstore": "^2.3.2",
    "request": "^2.87.0",
    "sequelize": "^4.41.2",
    "sequelize-cli": "^5.4.0",
    "sequelize-test-helpers": "^1.0.6",
    "slug": "^0.9.2",
    "underscore": "^1.9.1"
  },
  "devDependencies": {
    "@babel/node": "^7.0.0",
    "babel-eslint": "^10.0.1",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "babel-watch": "^2.0.7",
    "chai": "^4.2.0",
    "chai-http": "^4.2.0",
    "coveralls": "^3.0.2",
    "eslint": "^5.9.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.2",
    "eslint-plugin-react": "^7.11.1",
    "husky": "^1.2.0",
    "mocha": "^5.2.0",
    "nyc": "^13.1.0",
    "sequelize-test-helpers": "^1.0.6",
    "sinon": "^7.1.1"
  }
}